<%
  cert_dir = "/var/vcap/jobs/metric-store/config/certs"

  ms = link("metric-store")


  sorted_instances = ms.instances.sort_by {|i| i.address}
  index = sorted_instances.index(
      sorted_instances.find {|i| i.id == spec.id}
  )
%>
---
global:
#scrape_interval:     60s
scrape_configs:
  - job_name: metric-store
    scheme: https
    tls_config:
      ca_file:  "<%= "#{cert_dir}/metric_store_metrics_client_ca.crt" %>"
      cert_file: "<%= "#{cert_dir}/metric_store_metrics_client.crt" %>"
      key_file: "<%= "#{cert_dir}/metric_store_metrics_client.key" %>"
      server_name: metric-store
    dns_sd_configs:
      - names:
          - q-s4.metric-store.*.<%= spec.deployment %>.bosh
        type: A
        port: <%= p('metrics_port') %>
    relabel_configs:
      - source_labels:
          - "__meta_dns_name"
        target_label: deployment
        regex: "([^.]*[.]){3}([^.]*)[.].*"
        replacement: "$2"
    <%
  if_link("metric-store-nozzle") do |metric_store_nozzle|
%>
  - job_name: metric-store-nozzle
    scheme: https
    tls_config:
      ca_file:  "<%= "#{cert_dir}/metric_store_metrics_client_ca.crt" %>"
      cert_file: "<%= "#{cert_dir}/metric_store_metrics_client.crt" %>"
      key_file: "<%= "#{cert_dir}/metric_store_metrics_client.key" %>"
      server_name: metric-store
    dns_sd_configs:
      - names:
          - q-s4.metric-store.*.<%= spec.deployment %>.bosh
        type: A
        port: <%= metric_store_nozzle.p('metrics_port') %>
    relabel_configs:
      - source_labels:
          - "__meta_dns_name"
        target_label: deployment
        regex: "([^.]*[.]){3}([^.]*)[.].*"
        replacement: "$2"
    <% end %>
    <% if_link("metric-store-cf-auth-proxy") do |metric_store_cf_auth_proxy| %>
  - job_name: metric-store-cf-auth-proxy
    scheme: https
    tls_config:
      ca_file:  "<%= "#{cert_dir}/metric_store_metrics_client_ca.crt" %>"
      cert_file: "<%= "#{cert_dir}/metric_store_metrics_client.crt" %>"
      key_file: "<%= "#{cert_dir}/metric_store_metrics_client.key" %>"
      server_name: metric-store
    dns_sd_configs:
      - names:
          - q-s4.metric-store.*.<%= spec.deployment %>.bosh
        type: A
        port: <%= metric_store_cf_auth_proxy.p('metrics_port') %>
    relabel_configs:
      - source_labels:
          - "__meta_dns_name"
        target_label: deployment
        regex: "([^.]*[.]){3}([^.]*)[.].*"
        replacement: "$2"
    <% end %>
    <%
if_link("metric-store-blackbox") do |metric_store_blackbox|
  if index == 0
%>
  - job_name: metric-store-blackbox
    scheme: https
    tls_config:
      ca_file:  "<%= "#{cert_dir}/metric_store_metrics_client_ca.crt" %>"
      cert_file: "<%= "#{cert_dir}/metric_store_metrics_client.crt" %>"
      key_file: "<%= "#{cert_dir}/metric_store_metrics_client.key" %>"
      server_name: metric-store
    static_configs:
        <% metric_store_blackbox.instances.each do |blackbox| %>
      - targets:
          - <%= blackbox.address %>:<%= metric_store_blackbox.p('metrics_port') %>
        labels:
          id: <%= blackbox.id %>
          ip: <%= blackbox.address %>
          index: <%= blackbox.index %>
          deployment: <%= metric_store_blackbox.p('deployment', 'unknown') %>
    <% end %>
    <% end %>
    <% end %>
  - job_name: healthwatch-pas-exporter
    metrics_path: "/metrics"
    scheme: https
    tls_config:
      server_name: pasexporter
      ca_file: "/var/vcap/jobs/metric-store/config/certs/healthwatch_exporter_ca.crt"
      cert_file: "/var/vcap/jobs/metric-store/config/certs/healthwatch_exporter.crt"
      key_file: "/var/vcap/jobs/metric-store/config/certs/healthwatch_exporter.key"
    relabel_configs:
      - source_labels:
          - "__meta_dns_name"
        target_label: scrape_instance_group
        regex: "[^.]*[.]([^.]*).*"
        replacement: "$1"
    dns_sd_configs:
      - names:
          - q-s4.pas-sli-exporter.*.*.bosh.
          - q-s4.bosh-health-exporter.*.*.bosh.
          - q-s4.bosh-deployments-exporter.*.*.bosh.
        type: A
        port: 9090
  - job_name: healthwatch-pks-exporter
    metrics_path: "/metrics"
    scheme: https
    tls_config:
      server_name: pasexporter
      ca_file: "/var/vcap/jobs/metric-store/config/certs/healthwatch_exporter_ca.crt"
      cert_file: "/var/vcap/jobs/metric-store/config/certs/healthwatch_exporter.crt"
      key_file: "/var/vcap/jobs/metric-store/config/certs/healthwatch_exporter.key"
    relabel_configs:
      - source_labels:
          - "__meta_dns_name"
        target_label: scrape_instance_group
        regex: "[^.]*[.]([^.]*).*"
        replacement: "$1"
    dns_sd_configs:
      - names:
          - q-s4.pks-exporter.*.*.bosh.
          - q-s4.pks-sli-exporter.*.*.bosh.
        type: A
        port: 9090